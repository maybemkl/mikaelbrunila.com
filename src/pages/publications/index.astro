---
import Publications from "@layouts/Publications.astro";

// List of publications
const publications = [
  {
    title: "Amazing Research Paper",
    url: "https://example.com/amazing-research",
    image: "/assets/img/mikael_brunila.jpeg",
    description: "A groundbreaking study on amazing things.",
    pubDatetime: "2025-01-01T12:00:00Z", // Valid ISO 8601 date
    modDatetime: null, // Optional
  },
  {
    title: "Innovative Study on Tech",
    url: "https://example.com/innovative-tech",
    image: "/assets/img/mikael_brunila.jpeg",
    description: "An in-depth look at the latest technological advances.",
    pubDatetime: "2024-12-15T08:00:00Z",
    modDatetime: "2024-12-20T09:30:00Z",
  },
];

// Map the publications data into the expected `frontmatter` format
const cards = publications.map((pub) => ({
  href: pub.url, // Use the external link for href
  frontmatter: {
    title: pub.title,
    pubDatetime: pub.pubDatetime,
    modDatetime: pub.modDatetime,
    description: pub.description,
  },
}));
---

<Publications cards={cards} />
